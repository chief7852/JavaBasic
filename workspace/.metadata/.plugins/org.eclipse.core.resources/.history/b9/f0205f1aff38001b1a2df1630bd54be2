package programers;

public class sum {

	public static void main(String[] args) {
		String s = "qwert";
		int a = s.length()/2;
		String answer = "";
		if(s.length()%2 ==0){
			answer =s.substring(a-1,a+1);
		}else {
			answer = s.substring(a);
		}
		System.out.println(answer);
		System.out.println(a);
	}

}
