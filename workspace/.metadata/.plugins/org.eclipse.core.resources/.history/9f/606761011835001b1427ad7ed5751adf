	final int MAX_NUM =9;
	final int MIN_NUM =0;

	
	int numupdown(String num){
		if(this.num != MAX_NUM && this.num != MIN_NUM){
			if(num.equals(">")){
				this.num++; 
			}if(num.equals("<")){
				this.num--; 
			}
		}
		return this.num;
	}
	
	
