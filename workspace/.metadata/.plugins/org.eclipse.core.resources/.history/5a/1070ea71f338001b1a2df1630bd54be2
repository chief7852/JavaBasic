package g_oop2;

public class Time {
	
	//private를 넣음으로서 다른 클래스에서 직접 접근 못하게 만든다
	private int hour;
	private int minute;
	private int second;
	
	// source  메뉴에Generate Getters and Setters
	//get과 set을 각각 변수마다 도합 2개씩 만들어준다.(간접적으로 접근할수있게만들어준다)
	
	//get = 읽기
	public int getHour() {
		return hour;
	}
	//set = 저장
	public void setHour(int hour) {
		if(hour >= 0 && hour <= 12){
		this.hour = hour;
		}else{
			System.out.println("시간을 제대로 입력해 주십시오");
		}
	}

	public int getMinute() {
		return minute;
	}

	public void setMinute(int minute) {
		if(minute >= 0 && minute <60){
		this.minute = minute;
		}else{
			System.out.println("분을 제대로 입력해 주십시오");
		}
	}

	public int getSecond() {
		return second;
	}

	public void setSecond(int second) {
		if(second >= 0 && second<60){
		this.second = second;
		}else{
			System.out.println("초를 제대로 입력해 주십시오");
		}
	}
	
	
	
	//시간처럼 보이게 만들어주는 메서드
		String getTime(){
			return hour + ":" + minute + ":" + second;
		}
}
