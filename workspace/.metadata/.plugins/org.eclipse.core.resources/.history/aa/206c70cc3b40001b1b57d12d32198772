package j_jdbc;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.ResultSetMetaData;
import java.sql.SQLException;

public class JDBCboard
{
	String url = "jdbc:oracle:thin:@localhost:1521:xe"; //주소
	String user = "JYS02";	//아이디
	String password = "JAVA";	//비번
		
	
	
	Connection con = null;
	PreparedStatement ps = null;
	ResultSet rs = null;
	public static void main(String[] args) 
	{
		JDBCboard a =new JDBCboard();
		/*
		 * 오라클 데이터베이스에 게시판 테이블을 생성하고, 게시판 프로그램을 만들어주세요.
		 * 테이블 : TB_JDBC_BOARD
		 * 컬럼 : BOARD_NO, TITLE, CONTENT, USER_ID, REG_DATE
		 */
	
			
			try {
				a.con = DriverManager.getConnection(a.url, a.user, a.password);
				String sql = "insert into TB_JDBC_BOARD values(?,?,?)";
				a.ps =a.con.prepareStatement(sql);	
//				ResultSetMetaData md = rs.getMetaData();
//				int ColumnCount = md.getColumnCount();// 컬럼의 수
				
				
				
			} catch (SQLException e) {
				e.printStackTrace();
			}finally 
			{
				if(a.rs != null) try { a.rs.close(); } catch(Exception e) {}
				if(a.ps != null) try { a.ps.close(); } catch(Exception e) {}
				if(a.con != null) try { a.con.close(); } catch(Exception e) {}
			}
	}
	
	
	void 
}
