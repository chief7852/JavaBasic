package i_collection;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Scanner;
import java.util.Set;

public class Board {
	public static void main(String[] args) {
		/*
		 * ArrayList와 HashMap을 사용해 게시판 테이블을 만들고,
		 * 조회, 등록, 수정, 삭제가 가능한 게시판을 만들어주세요.
		 * 번호(PK), 제목, 내용, 작성자, 작성일
		 */
		
		/*
		 *  -------------------------------
		 *  번호  제목 		작성자	작성일
		 *  -------------------------------
		 *  4    안녕하세요  홍길동      12/15
		 *  3    안녕하세요  홍길동      12/15
		 *  2    안녕하세요  홍길동      12/15
		 *  1    안녕하세요  홍길동      12/15
		 *  -------------------------------
		 *  1.조회		2.등록		3.종료
		 */
		
		//게시판만들기
		
		
		Scanner s = new Scanner(System.in);
		ArrayList<HashMap<String, String>> Table = new ArrayList<>();
		HashMap<String, String> table = new HashMap<>();
		int num = 1;
		int tru = 0;
		
		while(true)
		{
			
			System.out.println("-------------------------------");
			System.out.println("번호\t제목\t작성자\t작성일");
			System.out.println("-------------------------------");
			
			for(int i = 0; i <Table.size();i++)
			{
				HashMap<String, String> hashmap = Table.get(i);
				Set<String> keys = hashmap.keySet();
				System.out.print(i);
				for(String key : keys)
				{
					System.out.print("\t"+hashmap.get(key));
				}
				System.out.println();
			}
			
			
			
			System.out.println("-------------------------------");
			System.out.println("1.조회	   2.등록	 3.종료");
			String ch = s.nextLine();
			
			switch(ch)
			{
			case "1" : continue;
			case "2" :System.out.print("제목 : ");
					  String title = s.nextLine();
					  table.put("제목", title);
					  System.out.print("작성자 : ");
					  String writer = s.nextLine();
					  table.put("작성자", writer);
					  System.out.print("작성일(Month/day) : ");
					  String date = s.nextLine();
					  table.put("작성일",date);
					  Table.add(table);
					  continue;
			case "3" : break; 
			}
			
		}//while(true)
		
	}
}
